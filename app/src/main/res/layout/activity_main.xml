<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/jan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:text="Jan"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:textSize="18sp" />

    <RadioButton
        android:id="@+id/feb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:text="Feb"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/jan"
        app:layout_constraintStart_toEndOf="@+id/jan"
        tools:textSize="18sp" />

    <RadioButton
        android:id="@+id/mar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mar"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/feb"
        app:layout_constraintEnd_toEndOf="@+id/name" />

    <RadioButton
        android:id="@+id/apr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:text="Apr"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/jan" />

    <RadioButton
        android:id="@+id/may"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="May"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/apr"
        app:layout_constraintStart_toStartOf="@+id/feb"
        tools:layout_editor_absoluteX="170dp" />

    <RadioButton
        android:id="@+id/jun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jun"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/may"
        app:layout_constraintEnd_toEndOf="@+id/name" />

    <RadioButton
        android:id="@+id/jul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:text="Jul"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/apr" />

    <RadioButton
        android:id="@+id/aug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aug"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/jul"
        app:layout_constraintStart_toStartOf="@+id/may"
        tools:layout_editor_absoluteX="173dp" />

    <RadioButton
        android:id="@+id/sep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sep"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/aug"
        app:layout_constraintEnd_toEndOf="@+id/name" />

    <RadioButton
        android:id="@+id/oct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:text="Oct"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/jul" />

    <RadioButton
        android:id="@+id/nov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nov"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/oct"
        app:layout_constraintStart_toStartOf="@+id/aug" />

    <RadioButton
        android:id="@+id/dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dec"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/nov"
        app:layout_constraintEnd_toEndOf="@+id/name" />

    <EditText
        android:id="@+id/day"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:inputType="number"
        android:text="Day"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nov" />

    <Button
        android:id="@+id/add_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Add Me"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/day" />
</android.support.constraint.ConstraintLayout>